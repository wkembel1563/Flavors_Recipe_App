<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="3pt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"

            android:orientation="horizontal"
            android:background="@color/teal_200">

            <ImageView
                android:id="@+id/dishIngredientImage"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="2pt"
                android:paddingTop="2pt"
                android:paddingStart="2pt"
                android:paddingEnd="1pt"
                app:srcCompat="@drawable/world_food"
                android:contentDescription="@string/ingredients" />

            <TextView
                android:id="@+id/tvDishIngredient2"
                android:layout_width="wrap_content"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="end"
                android:layout_gravity="center_horizontal"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="7dp"
                android:text="@string/ingredient"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDishIngredient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_horizontal"
                android:gravity="end"
                android:paddingStart="5dp"
                android:paddingEnd="7dp"
                android:paddingTop="10dp"
                android:layout_weight="0"
                android:paddingBottom="7dp"
                android:text="@string/ingredient"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/saveIngredient"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="2pt"
                android:layout_marginEnd="2pt"
                android:text="@string/add"
                android:textSize="11sp"
                android:layout_gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/dishIngredient1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.133" />


        </LinearLayout>



</androidx.cardview.widget.CardView>