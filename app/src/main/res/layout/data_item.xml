<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">
    <!--This is the parent window-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical">
        <!--container for country label and name-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <!--label-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country Name: "
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold" />
            <!--text display for country name-->
            <TextView
                android:id="@+id/tvnameOfPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Country Name 1"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>
        <!--container for recipe name-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <!--label-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipe: "
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold" />
            <!--text display for recipe name-->
            <TextView
                android:id="@+id/tvrecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="recipe name"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>
        <!--container for prep time-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <!--label-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prep Time: "
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold" />
            <!--text display for prep time-->
            <TextView
                android:id="@+id/tvpreptime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="prep time"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>
        <!--container for cook time-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <!--label-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cook Time: "
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold" />
            <!--text display for cook time-->
            <TextView
                android:id="@+id/tvcooktime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="cook time"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>
        <!--container for ingredients-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <!--label-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients: \n"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold" />
            <!--text display for ingredients-->
            <TextView
                android:id="@+id/tvingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="ingredients"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>
        <!--container for instructions-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="313dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <!--label-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructions: \n"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold" />
            <!--text display for instructions-->
            <TextView
                android:id="@+id/tvinstructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="instructions"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>